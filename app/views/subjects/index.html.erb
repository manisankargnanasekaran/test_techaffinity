<p id="notice"><%= notice %></p>

<h1>Subjects <%= link_to 'New Subject', new_subject_path, class: "btn btn-success pull-right" %></h1>

<table id="customer_index" class="table display table-hover table-striped display" cellspacing="0" width="100%"s>
  <thead>
    <tr>
      <th>Subject name</th>
      <th>Subject code</th>
    <!--   <th>Is finished</th> -->
      <th>Teacher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.subject_name %></td>
        <td><%= subject.subject_code %></td>
       <!--  <td><!%= subject.is_finished %></td> -->
        <td><%= subject.user.name %></td>
        <td><%= link_to 'Show', subject %></td>
        <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
        <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


