<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Roll no</th>
      <th>Total</th>
      <th>Rank</th>
    </tr>
  </thead>

  <tbody>
  	<%i = 1%>
    <% @students.each_with_index do |student, index| %>
      <%if index == 0 %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.roll_no %></td>
        <td><%= student.total %></td>
        <td><%=i%></td>
      </tr>
      <%elsif @students[index - 1].total == student.total%>
        <tr>
        <td><%= student.name %></td>
        <td><%= student.roll_no %></td>
        <td><%= student.total %></td>
        <td><%=i%></td>
      </tr>

      <%else%>
        <%i += 1%>
       <tr>
        <td><%= student.name %></td>
        <td><%= student.roll_no %></td>
        <td><%= student.total %></td>
        <td><%=i%></td>
      </tr>
      
      <%end%>



    <% end %>
  </tbody>
</table>



