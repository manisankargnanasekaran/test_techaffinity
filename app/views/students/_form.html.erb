<%= form_with(model: student, local: true) do |form| %>

   <div class="row">
  <div class="col-md-6">
  <div class="form-group">
  <div class="field">
    <%= form.label :name, class: "control-label" %>
    <%= form.text_field :name, id: :student_name , class: "form-control", placeholder: "StudentName" %>
  </div>
</div>
</div>
</div>

 <div class="row">
  <div class="col-md-6">
  <div class="form-group">

  <div class="field">
    <%= form.label :roll_no, class: "control-label" %>
    <%= form.text_field :roll_no, id: :student_roll_no, class: "form-control", placeholder: "RollNo"  %>
  </div>
</div>
</div>
</div>

  <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10 save-btn ">
        <%= link_to 'Back', students_path, class: "btn btn-primary submit sub_button" %>
        <%= button_tag(type: "submit", class: "btn btn-success 
         submit sub_button") do %>
        Save
        <% end %>
      </div>
    </div>
<% end %>
