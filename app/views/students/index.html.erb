<p id="notice"><%= notice %></p>

<h1>Students <%= link_to 'New Student', new_student_path, class: "btn btn-success pull-right"%></h1>

<table id="customer_index" class="table display table-hover table-striped display" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Roll no</th>
      <th>Total</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.roll_no %></td>
        <%if student.total == nil%>
        <td>0</td>
        <%else%>
        <td><%= student.total %></td>
        <%end%>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


